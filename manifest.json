{
  "manifest_version": 2,

  "name": "Coverage Mapping Codes Generator",
  "description": "This extension help to generate coverage mapping codes in VB.NET",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Right click the source select element"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*/*"],
    "css": [ "js/skin/layer.css" ],
    "js": ["content_script.js","js/jquery.min.js","js/layer.js"]
    , "all_frames":true
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://test.quotepro.com/"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_48.png"
  }
}